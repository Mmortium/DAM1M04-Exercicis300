{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "common_name",
      "scientific_name",
      "conservation_status",
      "average_mass_kg",
      "max_speed_kmh",
      "social_structure",
      "habitat",
      "diet",
      "population_estimate",
      "threats"
    ],
    "properties": {
      "common_name": { "type": "string" },
      "scientific_name": { "type": "string" },

      "conservation_status": {
        "type": "string",
        "enum": [
          "Least Concern",
          "Near Threatened",
          "Vulnerable",
          "Endangered",
          "Critically Endangered"
        ]
      },

      "average_mass_kg": { "type": "number", "minimum": 0 },
      "max_speed_kmh": { "type": "number", "minimum": 0 },

      "social_structure": { "type": "string" },

      "habitat": {
        "type": "object",
        "required": ["biome", "range_countries", "protected_areas"],
        "properties": {
          "biome": { "type": "string" },
          "range_countries": {
            "type": "array",
            "items": { "type": "string" }
          },
          "protected_areas": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },

      "diet": {
        "type": "object",
        "required": ["type", "primary_foods"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["herbivore", "carnivore", "omnivore"]
          },
          "primary_foods": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },

      "population_estimate": {
        "type": "object",
        "required": ["value", "trend"],
        "properties": {
          "value": { "type": "string" },
          "trend": {
            "type": "string",
            "enum": ["Increasing", "Stable", "Decreasing", "Stable to decreasing"]
          }
        }
      },

      "threats": {
        "type": "array",
        "items": { "type": "string" }
      }
    }
  }
}
