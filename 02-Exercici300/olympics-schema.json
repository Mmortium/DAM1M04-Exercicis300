{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "event",
      "sport",
      "category",
      "record",
      "athlete",
      "games",
      "venue",
      "status",
      "notes"
    ],
    "properties": {
      "event": { "type": "string" },
      "sport": { "type": "string" },
      "category": { "type": "string" },

      "record": {
        "type": "object",
        "required": ["value", "unit", "display", "set_on"],
        "properties": {
          "value": { "type": "number", "minimum": 0 },
          "unit": { "type": "string" },
          "display": { "type": "string" },
          "set_on": { "type": "string", "format": "date" }
        }
      },

      "athlete": {
        "type": "object",
        "required": ["name", "country"],
        "properties": {
          "name": { "type": "string" },
          "country": { "type": "string" }
        }
      },

      "games": {
        "type": "object",
        "required": ["year", "host_city", "season"],
        "properties": {
          "year": { "type": "integer", "minimum": 1896 },
          "host_city": { "type": "string" },
          "season": {
            "type": "string",
            "enum": ["Summer", "Winter"]
          }
        }
      },

      "venue": { "type": "string" },
      "status": { "type": "string" },

      "wind": {
        "type": ["number", "null"]
      },

      "notes": { "type": "string" }
    }
  }
}
